pipeline {
    agent {
        label 'master'
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '7'))
        // skipDefaultCheckout(true)
        disableConcurrentBuilds()
        timeout (time: 1, unit: 'MINUTES')
        timestamps()
    }
    parameters {
        string(name: 'YOUR_NAME', defaultValue: '', description: 'No special character, Use double quote if more than one word')
        string(name: 'YOUR_ADDRESS', defaultValue: '', description: 'No special character, Use double quote if more than one word')
        string(name: 'CANIDATE_CITY_STATE_ZIP_CODE', defaultValue: '', description: 'No special character, Use double quote if more than one word')
        string(name: 'YOUR_EMAIL_ADDRESS', defaultValue: '', description: 'No special character, Use double quote if more than one word')
        string(name: 'YOUR_PHONE_NUMBER', defaultValue: '', description: 'No special character, Use double quote if more than one word')
        string(name: 'PREVIOUS_COMPANY', defaultValue: '', description: 'No special character, Use double quote if more than one word')
        string(name: 'JOB_TITLE', defaultValue: '', description: 'No special character, Use double quote if more than one word')

        string(name: 'EMPLOYER_NAME', defaultValue: '', description: 'No special character, Use double quote if more than one word')
        string(name: 'COMPANY_NAME', defaultValue: '', description: 'No special character, Use double quote if more than one word')
        string(name: 'COMPANY_ADDRESS', defaultValue: '', description: 'No special character, Use double quote if more than one word')
        string(name: 'EMPLOYER_CITY_STATE_ZIP_CODE', defaultValue: '', description: 'No special character, Use double quote if more than one word')
        string(name: 'BRANCH', defaultValue: 'main', description: 'No special character, Use double quote if more than one word')



    }
    stages {
        stage ('Checkout') {
            steps {
                dir("${WORKSPACE}/code") {
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: "*/${params.BRANCH}"]],
                        doGenerateSubmoduleConfigurations: false,
                        extensions: [[$class: 'LocalBranch']],
                        submoduleCfg: [],
                        userRemoteConfigs: [[
                        url: 'https://github.com/clovisbernard/jenkins-classes.git',
                        credentialsId: 'github-auth'
                        ]]
                    ])
                }
            }
        }
        stage('run') {
            steps {
                script {
                    dir("${WORKSPACE}/code/exercice/exercice-03") {
                        sh """
                            sudo chmod +x cover-letter-with-argument.sh
                            sudo bash cover-letter-with-argument.sh ${params.YOUR_NAME} ${params.YOUR_ADDRESS} ${params.CANIDATE_CITY_STATE_ZIP_CODE} ${params.YOUR_EMAIL_ADDRESS} ${params.YOUR_PHONE_NUMBER} ${params.PREVIOUS_COMPANY} ${params.JOB_TITLE} ${params.EMPLOYER_NAME} ${params.COMPANY_NAME} ${params.COMPANY_ADDRESS} ${params.EMPLOYER_CITY_STATE_ZIP_CODE}
                            echo "Your resume is located here:"\$(pwd)
                        """
                    }
                }
            }
        }
    }
}